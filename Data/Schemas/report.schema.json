{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "svr.report.schema.json",
  "title": "SVR Session Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "session_id",
    "participant_id",
    "scenario_id",
    "score_total",
    "status",
    "objective_breakdown",
    "why",
    "recommended_microdrills"
  ],
  "properties": {
    "session_id": { "type": "string", "minLength": 1 },
    "participant_id": { "type": "string", "minLength": 1 },
    "scenario_id": { "type": "string", "const": "office_fire_mvp" },
    "score_total": { "type": "number", "minimum": 0, "maximum": 100 },
    "status": {
      "type": "string",
      "enum": ["pass", "conditional_pass", "fail"]
    },
    "objective_breakdown": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["objective_id", "label", "weight", "achieved", "score_awarded"],
        "properties": {
          "objective_id": { "type": "string" },
          "label": { "type": "string" },
          "weight": { "type": "number" },
          "achieved": { "type": "boolean" },
          "score_awarded": { "type": "number" },
          "evidence_event_ids": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "critical_errors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "trigger_event_id", "penalty"],
        "properties": {
          "code": { "type": "string" },
          "trigger_event_id": { "type": "string" },
          "penalty": { "type": "number" },
          "why": { "type": "string" }
        }
      }
    },
    "why": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "recommended_microdrills": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["microdrill_id", "reason"],
        "properties": {
          "microdrill_id": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    },
    "re_audit_delta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["score_delta", "improved_objectives"],
      "properties": {
        "score_delta": { "type": "number" },
        "improved_objectives": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
